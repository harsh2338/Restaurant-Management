<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.manager.ManagerRefresh">

    <Button        android:textColor="@android:color/white"

        android:id="@+id/Refresh_Timing"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@color/colorOverlay"
        android:layout_marginBottom="5dp"
        android:text="@string/RefTim" />

    <Button        android:textColor="@android:color/white"

        android:id="@+id/Refresh_Ratings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/Refresh_Timing"
        android:background="@color/colorOverlay"

        android:text="@string/RefRatings" />
</RelativeLayout>